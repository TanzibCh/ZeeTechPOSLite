<UserControl x:Class="DesktopUI.Views.RefundView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:DesktopUI.ViewModels"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.FontWeight="Medium"
             FontFamily="{materialDesign:MaterialDesignFont}"
             d:DataContext="{d:DesignInstance Type=viewModel:RefundViewModel}"
             mc:Ignorable="d"
             Height="490" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>

        <!-- Top Panel -->
        <materialDesign:ColorZone Grid.Row="0"
                                  Mode="PrimaryDark"
                                  Margin="0 0 0 5">
            <Label HorizontalAlignment="Center"
                   Style="{StaticResource HeaderWhiteLabel}"
                   Content="Sale Return" />
        </materialDesign:ColorZone>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sale Product List -->
            <materialDesign:Card Grid.Column="0"
                                 Margin="10 5 5 5"
                                 UniformCornerRadius="15">
                <StackPanel Orientation="Vertical">
                    <Label HorizontalAlignment="Center"
                           Content="Sale Products" />

                    <Separator Margin="10 -5"
                               Style="{StaticResource MaterialDesignLightSeparator}" />

                    <!-- ListBoox Headers -->
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Name"
                               Margin="5 0 5 0"
                               Width="165"/>
                        <Label Content="Qty"
                               Margin="10 0 5 0" />
                        <Label Content="Price"
                               Margin="10 0 5 0"/>
                    </StackPanel>
                    <ListBox Height="290"
                             ItemsSource="{Binding SaleProducts}"
                             SelectedItem="{Binding SelectedSaleProduct}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0 0 5 0"
                                               Width="180"
                                               Text="{Binding ProductName}" />
                                    <TextBlock Margin="5 0"
                                               Width="30"
                                               Text="{Binding QuantitySold}" />
                                    <TextBlock Margin="5 0"
                                               Width="70"
                                               HorizontalAlignment="Right"
                                               Text="{Binding SalePrice}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </materialDesign:Card>

            <!-- Edit Fields -->
            <materialDesign:Card Grid.Column="1"
                                 Margin="5"
                                 UniformCornerRadius="15">
                <StackPanel
                        Margin="10"
                        Orientation="Vertical">
                    <!-- Add all Button -->
                    <Button Content="Add all"
                            Style="{StaticResource AccentButton}"
                            Command="{Binding AddAllCommand}" />

                    <!-- Restocking charge -->
                    <TextBox materialDesign:HintAssist.Hint="Restocking charge"
                             materialDesign:TextFieldAssist.SuffixText="%"
                             HorizontalContentAlignment="Center"
                             Width="134"
                             Style="{StaticResource floatingHintBox}"
                             Text="{Binding RestockingCharge, Mode=TwoWay}" />
                    <StackPanel Orientation="Horizontal" Margin="0 30"
                                HorizontalAlignment="Center">
                        <!-- Remove quantity button -->
                        <Button Content="-"
                                Width="30"
                                Command="{Binding RemoveQuantityCommand}"
                                IsEnabled="{Binding RemoveQuantityEnabled}" />
                        <!-- Quantity -->
                        <TextBox Margin="10 0"
                                 Style="{StaticResource floatingHintBox}"
                                 materialDesign:HintAssist.Hint="Qty"
                                 HorizontalContentAlignment="Center"
                                 Width="50"
                                 Text="{Binding Quantity, Mode=TwoWay}"
                                 IsEnabled="{Binding QuantityEnabled}" />
                        <!-- Add quantity button -->
                        <Button Content="+"
                                Width="30"
                                Command="{Binding AddQuantityCommand}"
                                IsEnabled="{Binding AddQuantityEnabled}" />
                    </StackPanel>
                    <!-- Add button -->
                    <Button Content="Add"
                            Margin=" 0 0 0 10"
                            Command="{Binding AddCommand}"
                            IsEnabled="{Binding AddButtonEnabled}" />
                    <!-- remove button -->
                    <Button Content="Remove"
                            Command="{Binding RemoveCommand}" />

                    <Separator Margin="0 20 0 0" Style="{StaticResource MaterialDesignLightSeparator}" />
                    <!-- Product total -->
                    <Label HorizontalAlignment="Center"
                           Content="Product Total"
                           Foreground="Gray" />
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="£" />
                        <TextBlock Text="{Binding ProductTotal}" />
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Refund Product List -->
            <materialDesign:Card Grid.Column="2"
                                 Margin="5 5 10 5"
                                 UniformCornerRadius="15">
                <StackPanel Orientation="Vertical">
                    <Label HorizontalAlignment="Center"
                           Content="Products to refund" />

                    <Separator Margin="10 -5"
                               Style="{StaticResource MaterialDesignLightSeparator}" />

                    <!-- ListBoox Headers -->
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Name"
                               Margin="5 0 100 0"/>
                        <Label Content="Qty"
                               Margin="10 0 40 0" />
                        <Label Content="Price"
                               Margin="10 0 60 0" />
                    </StackPanel>
                    <ListBox Height="285"
                             ItemsSource="{Binding ReturnProducts}"
                             SelectedItem="{Binding SelectedRefundProduct}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0 0 5 0"
                                               Width="180"
                                               Text="{Binding ProductName}" />
                                    <TextBlock Margin="5 0"
                                               Width="30"
                                               Text="{Binding QuantitySold}" />
                                    <TextBlock Margin="5 0"
                                               Width="70"
                                               HorizontalAlignment="Right"
                                               Text="{Binding Total}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Separator Margin="10 -2"
                               Style="{StaticResource MaterialDesignLightSeparator}" />
                    <Grid Margin="10 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0"
                                    Orientation="Vertical">
                            <CheckBox Content="Card"
                                      IsChecked="{Binding CardPayment}" />
                            <CheckBox Content="Cash"
                                      IsChecked="{Binding CashPayment}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <TextBlock Text="Total refund: " />
                            <TextBlock Text="£" />
                            <TextBlock Margin="0 0 10 0" MinWidth="20"
                                       Text="{Binding RefundTotal}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Bottom panel -->
        <materialDesign:ColorZone Grid.Row="2"
                                  Margin="0 5 0 0"
                                  Mode="PrimaryDark"
                                  VerticalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" Margin="0 5 5 0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <Button Content="Close"
                        Margin="5 0"
                        Command="{Binding CloseCommand}" />
                <Button Content="Undo"
                        Margin="5 0"
                        Command="{Binding UndoCommand}" />
                <Button Content="Complete"
                        Style="{StaticResource AccentButton}"
                        Command="{Binding RefundCommand}"
                        Margin="5 0" />
            </StackPanel>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>