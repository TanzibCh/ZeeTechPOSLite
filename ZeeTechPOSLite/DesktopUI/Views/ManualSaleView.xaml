<UserControl x:Class="DesktopUI.Views.ManualSaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:DesktopUI.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="14"
             FontFamily="{materialDesign:MaterialDesignFont}"
             xmlns:local="clr-namespace:DesktopUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100" >

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type viewModel:ManualSaleViewModel}">
            <local:ManualSaleView/>
        </DataTemplate>
        
        <viewModel:ManualSaleViewModel x:Key="SaleVM" />
    </UserControl.Resources>

    <Grid Margin="10" DataContext="{StaticResource SaleVM}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--#region Product Entry-->
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--#region Search entry-->
            <materialDesign:Card Grid.Row="0"
                                    Margin="10 10"
                                    BorderBrush="White"
                                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                    UniformCornerRadius="15" >

            <Grid Grid.Column="0" Grid.Row="1" Margin="0 0 10 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>


                <!-- Lable -->
                <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    Content="Search Entry" FontSize="16"/>
                <!-- Product search box -->
                <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Margin="10"
                        VerticalContentAlignment="Center"
                        materialDesign:HintAssist.Hint="Search product by Model/Barcode" />

                <!-- Search ListBox -->
                <ListBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4"
                        Margin="10 0">

                </ListBox>

                <!-- Qty -->
                <TextBox Grid.Column="0" Grid.Row="3" Margin="10"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    materialDesign:HintAssist.Hint="Qty" />

                <!-- Price -->
                <TextBox Grid.Column="1" Grid.Row="3" Margin="10"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    materialDesign:HintAssist.Hint="Price" />

                <!-- Cost -->
                <TextBox Grid.Column="2" Grid.Row="3" Margin="10"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    materialDesign:HintAssist.Hint="Cost" />

                <!-- Add to cart Button -->
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Grid.Column="3" Grid.Row="3"
                    Margin="10"
                    Content="Add"/>
            </Grid>
            </materialDesign:Card>
            <!--#endregion-->
            
            <!--#region Manual entry-->
            <materialDesign:Card Grid.Row="2"
                                    Margin="10 10"
                                    BorderBrush="White"
                                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                    UniformCornerRadius="15" >


                <Grid Grid.Column="0" Grid.Row="3" Margin="0 0 10 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="80" />
                        <RowDefinition Height="80" />
                    </Grid.RowDefinitions>


                    <!-- Lable -->
                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    Content="Manual Entry" FontSize="16"/>

                    <!-- Name/Model -->
                    <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" VerticalContentAlignment="Center"
                             Margin="10"
                             Text="{Binding ManualProductName, Mode=TwoWay}"
                             materialDesign:HintAssist.Hint="Name/Model" />

                    <!-- Description -->
                    <TextBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4" VerticalContentAlignment="Center"
                             Margin="10"
                             Text="{Binding ManualProductDescription, Mode=TwoWay}"
                             materialDesign:HintAssist.Hint="Description"  />

                    <!-- Qty -->
                    <StackPanel Grid.Column="0" Grid.Row="3" Margin="5">
                        <Label Content="Quantity" HorizontalAlignment="Center"
                               Foreground="#FFA0A0A0"/>
                        
                        <TextBox HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding ManualQuantity, Mode=TwoWay}"/>
                    </StackPanel>
                    

                    <!-- Price -->
                    <StackPanel Grid.Column="1" Grid.Row="3" Margin="5">
                        <Label Content="Price" HorizontalAlignment="Center" 
                               Foreground="#FFA0A0A0"/>

                        <TextBox HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding ManualPrice, Mode=TwoWay}"/>

                    </StackPanel>
                   
                    <!-- Code -->
                    <StackPanel Grid.Column="0" Grid.Row="4" Margin="5">
                        <Label Content="Code" HorizontalAlignment="Center" 
                               Foreground="#FFA0A0A0"/>

                        <TextBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                             Text="{Binding ManualCode, Mode=TwoWay}" />
                    </StackPanel>
                    

                    <!-- Cost -->
                    <StackPanel Grid.Column="1" Grid.Row="4" Margin="5">
                        <Label Content="Cost" HorizontalAlignment="Center" 
                               Foreground="#FFA0A0A0"/>
                        
                        <TextBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                             Text="{Binding ManualCost, Mode=TwoWay}" />
                    </StackPanel>
                    

                    <!-- Add to cart button -->
                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            Grid.Column="3" Grid.Row="4"
                            Margin="10"
                            Content="Add"
                            Command="{Binding AddManualProduct}"/>

                    <WrapPanel Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Right">
                        <RadioButton Margin="5" >
                            Mobile
                        </RadioButton>

                        <RadioButton Margin="5" >
                            Camera
                        </RadioButton>

                        <RadioButton Margin="5" >
                            Computer
                        </RadioButton>

                        <RadioButton Margin="5" >
                            Home
                        </RadioButton>

                        <RadioButton Margin="5" >
                            Repair
                        </RadioButton>
                    </WrapPanel>

                </Grid>
            </materialDesign:Card>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
        
        <!--#region Cart -->
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>

            <!--#region Cart ListBox -->
            <materialDesign:Card Margin="10 10"
                                    BorderBrush="White"
                                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                    UniformCornerRadius="15">
                <StackPanel Orientation="Vertical">
                    <Label HorizontalAlignment="Center"
                           Content="Cart"
                           FontSize="20">
                    </Label>

                    <Separator Margin="10 0" />

                    <!-- Cart ListBox -->
                    <ListBox Grid.Row="0" HorizontalContentAlignment="Stretch"
                             Margin="10,10,10,10"
                             ItemsSource="{Binding Cart}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <!-- Listbox grid -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition MinWidth="100" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!-- Name/model -->
                                    <TextBox Grid.Column="0"
                                   Margin="5"
                                   Text="{Binding Product.ProductName }" FontSize="16" />

                                    <!-- Description and Remove Button Grid -->
                                    <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="458*" />
                                            <ColumnDefinition Width="50" />

                                        </Grid.ColumnDefinitions>

                                        <!-- Description -->
                                        <TextBox Grid.Column="0"
                                   Margin="5,5,5,5"
                                   Text="{Binding Product.ProductDescription}" FontSize="18" />

                                        <!-- Remove Button -->
                                        <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                Grid.Column="2"
                                                Margin="5,5,5,6"
                                                Content="X"/>
                                    </Grid>

                                    <!-- Total -->
                                    <TextBox Grid.Column="1" HorizontalContentAlignment="Center"
                                             Margin="5"
                                             Text="{Binding Price}" FontSize="16" />

                                    <!-- Qty-->
                                    <TextBox Grid.Column="2" HorizontalContentAlignment="Center"
                                   Margin="5" MinWidth="70"
                                   HorizontalAlignment="Center"
                                   Text="{Binding Quantity}" FontSize="16" />

                                    <!-- Total -->
                                    <TextBox Grid.Column="3" HorizontalContentAlignment="Center"
                                   Margin="5"
                                   Text="{Binding Total}" FontSize="16" />

                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

            </materialDesign:Card>
            
            <!--#endregion-->
            
            <!--#region Payment-->
            <materialDesign:Card Grid.Row="1"
                                 Margin="10 10"
                                 BorderBrush="White"
                                 materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                 UniformCornerRadius="15">

                <Grid Grid.Column="1" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Pay Button -->
                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        VerticalAlignment="Bottom"
                        MinHeight="100"
                        Grid.Column="1"
                        Margin="10"
                        Content="Pay" FontSize="30" FontWeight="Bold" />

                    <!-- Payment Grid -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="10 0"
                                Orientation="Vertical" >
                            <Label Content="Card" 
                               Height="30"
                               VerticalContentAlignment="Bottom"
                               HorizontalContentAlignment="Center"
                               FontSize="16"/>
                            <TextBox Text="£0.00"
                                 HorizontalContentAlignment="Center"
                                 FontSize="16"/>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="10 0"
                                Orientation="Vertical" >
                            <Label Content="Cash" 
                               Height="30"
                               VerticalContentAlignment="Bottom"
                               HorizontalContentAlignment="Center"
                               FontSize="16"/>
                            <TextBox Text="£0.00"
                                 HorizontalContentAlignment="Center"
                                 FontSize="16"/>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Grid.Row="2" Margin="10 0"
                                Orientation="Vertical" >
                            <Label Content="Cheque" 
                               Height="30   "
                               VerticalContentAlignment="Bottom"
                               HorizontalContentAlignment="Center"
                               FontSize="16"/>
                            <TextBox Text="£0.00"
                                 HorizontalContentAlignment="Center"
                                 FontSize="16"/>
                        </StackPanel>

                        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Label Margin="10" VerticalAlignment="Center"
                                   Content="Sub-Total"
                                   FontSize="16"/>
                                <TextBlock Margin="10" VerticalAlignment="Center" MinWidth="150"
                                       Text="£00.00"
                                       FontSize="20"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Label Margin="10" VerticalAlignment="Center"
                                   Content="Tax"
                                   FontSize="16"/>
                                <TextBlock Margin="10" VerticalAlignment="Center" MinWidth="150"
                                       Text="£00.00"
                                       FontSize="20"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Label Margin="10" VerticalAlignment="Center"
                                   Content="Total"
                                   FontSize="16"/>
                                <TextBlock Margin="10" VerticalAlignment="Center" MinWidth="150"
                                       Text="£00.00"
                                       FontSize="30"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>

            </materialDesign:Card>
            
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
    </Grid>
</UserControl>
