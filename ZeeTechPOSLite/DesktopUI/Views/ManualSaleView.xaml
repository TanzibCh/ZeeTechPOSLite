<UserControl x:Class="DesktopUI.Views.ManualSaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="14"
             FontFamily="{materialDesign:MaterialDesignFont}"
             xmlns:local="clr-namespace:DesktopUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100" >

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--#region  Date Time -->
        <!-- Date and Time -->
        <StackPanel  Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
            <DatePicker HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                        Margin="10 0"
                        MinWidth="150"
                        Text="Date" />

            <TextBox  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                      Margin="10 17"
                      MinWidth="150"
                      Text="Time" />
        </StackPanel>
        <!--#endregion-->

        <!--Product entry-->
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--#region Search entry-->
            <materialDesign:Card Grid.Row="0"
                                 Margin="10"
                                 BorderBrush="White"
                                 materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                 UniformCornerRadius="15" >

            <Grid Grid.Column="0" Grid.Row="1" Margin="0 0 10 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>


                <!-- Lable -->
                <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4"
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                   Content="Search Entry" FontSize="16"/>
                <!-- Product search box -->
                <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Margin="10"
                     VerticalContentAlignment="Center"
                     materialDesign:HintAssist.Hint="Search product by Model/Barcode" />

                <!-- Search ListBox -->
                <ListBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4"
                     Margin="10 0">

                </ListBox>

                <!-- Qty -->
                <TextBox Grid.Column="0" Grid.Row="3" Margin="10"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 materialDesign:HintAssist.Hint="Qty" />

                <!-- Price -->
                <TextBox Grid.Column="1" Grid.Row="3" Margin="10"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 materialDesign:HintAssist.Hint="Price" />

                <!-- Cost -->
                <TextBox Grid.Column="2" Grid.Row="3" Margin="10"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 materialDesign:HintAssist.Hint="Cost" />

                <!-- Add to cart Button -->
                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Grid.Column="3" Grid.Row="3"
                    Margin="10"
                    Content="Add"/>
            </Grid>
            </materialDesign:Card>
            <!--#endregion-->

            <!--#region Manual entry-->
            <materialDesign:Card Grid.Row="1"
                                 Margin="10"
                                 BorderBrush="White"
                                 materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                 UniformCornerRadius="15" >


                <Grid Grid.Column="0" Grid.Row="3" Margin="0 0 10 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>


                    <!-- Lable -->
                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4"
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                   Content="Manual Entry" FontSize="16"/>

                    <!-- Name/Model -->
                    <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" VerticalContentAlignment="Center"
                 Margin="10"
                 materialDesign:HintAssist.Hint="Name/Model" />

                    <!-- Description -->
                    <TextBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4" VerticalContentAlignment="Center"
                 Margin="10"
                 materialDesign:HintAssist.Hint="Description"  />

                    <!-- Qty -->
                    <TextBox Grid.Column="0" Grid.Row="3" Margin="10"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 materialDesign:HintAssist.Hint="Qty" />

                    <!-- Price -->
                    <TextBox Grid.Column="1" Grid.Row="3" Margin="10"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 materialDesign:HintAssist.Hint="Price" />

                    <!-- Code -->
                    <TextBox Grid.Column="0" Grid.Row="4" Margin="10"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 materialDesign:HintAssist.Hint="Code" />

                    <!-- Cost -->
                    <TextBox Grid.Column="1" Grid.Row="4" Margin="10"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 materialDesign:HintAssist.Hint="Cost"  />

                    <!--Add to cart button -->
                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Grid.Column="3" Grid.Row="4"
                    Margin="10"
                    Content="Add"/>

                </Grid>
            </materialDesign:Card>
            <!--#endregion-->
        </Grid>
    </Grid>
</UserControl>
