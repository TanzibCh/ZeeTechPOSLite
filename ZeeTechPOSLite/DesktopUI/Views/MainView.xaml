<Window x:Class="DesktopUI.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:DesktopUI.ViewModels"
        xmlns:local="clr-namespace:DesktopUI.Views"
        mc:Ignorable="d"
        Title="MainView" Height="1000" Width="1700" MinHeight="800" MinWidth="1400" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:ManualSaleViewModel}">
            <local:ManualSaleView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:BankingViewModel}" >
            <local:BankingView />
        </DataTemplate>

        <viewModel:MainViewModel x:Key="mainVM" />
    </Window.Resources>
    
    <Grid DataContext="{StaticResource mainVM}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <Style TargetType="materialDesign:PackIcon">
                <Setter Property="Width" Value="30" />
                <Setter Property="Height" Value="30" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>

            <Style TargetType="TextBlock" x:Key="menuText">
                <Setter Property="Foreground" Value="#bfb78d" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
        </Grid.Resources>

        <Border Grid.Column="0" Background="#37474F" />




        <StackPanel >
            <StackPanel Margin="0 10">
                <Button Style="{StaticResource MaterialDesignFloatingActionButton}" HorizontalAlignment="Center"
                    BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#bfb78d"
                        Command="{Binding OpenManualSales}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="CashRegister" />
                    </StackPanel>
                    
                </Button>
                <TextBlock Text="Sale" 
                           Style="{StaticResource menuText}"/>
            </StackPanel>
            
            <StackPanel Margin="0 10">
                <Button Style="{StaticResource MaterialDesignFloatingActionButton}" HorizontalAlignment="Center"
                    BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#bfb78d">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ClipboardTextSearchOutline" />
                    </StackPanel>
                </Button>
                <TextBlock Text="Search" 
                           Style="{StaticResource menuText}"/>
            </StackPanel>
            
            <StackPanel Margin="0 10">
                <Button Style="{StaticResource MaterialDesignFloatingActionButton}" HorizontalAlignment="Center"
                    BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#bfb78d">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Archive" />
                    </StackPanel>
                </Button>
                <TextBlock Text="Products" 
                           Style="{StaticResource menuText}"/>
            </StackPanel>

            <StackPanel Margin="0 10">
                <Button Style="{StaticResource MaterialDesignFloatingActionButton}" HorizontalAlignment="Center"
                    BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#bfb78d"
                        Command="{Binding OpenBanking}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Calculator" />
                    </StackPanel>
                </Button>
                <TextBlock Text="Banking" 
                           Style="{StaticResource menuText}"/>
            </StackPanel>

            <StackPanel Margin="0 10">
                <Button Style="{StaticResource MaterialDesignFloatingActionButton}" HorizontalAlignment="Center"
                    BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#bfb78d">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Settings" />
                    </StackPanel>
                </Button>
                <TextBlock Text="Settings" 
                           Style="{StaticResource menuText}"/>
            </StackPanel>

        </StackPanel>

        <Grid Grid.Column="1">

            <Grid.Resources>
                <Style TargetType="materialDesign:PackIcon">
                    <Setter Property="Width" Value="20" />
                    <Setter Property="Height" Value="20" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>
            </Grid.Resources>

            <ContentControl Content="{Binding SelectedViewModel}"/>
        </Grid>
    </Grid>
        
        
</Window>
