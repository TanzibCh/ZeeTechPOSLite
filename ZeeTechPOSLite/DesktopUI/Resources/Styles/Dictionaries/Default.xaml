<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!--#region Lables -->

    <!--Base lable-->
    <Style TargetType="Label" x:Key="LabelBase"
           BasedOn="{StaticResource MaterialDesignLabel}">
        <Setter Property="FontSize" Value="14" />
    </Style>
    
    <!-- Default Lable style -->
    <Style TargetType="Label" 
               BasedOn="{StaticResource LabelBase}">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- Small Label -->
    <Style TargetType="Label" x:Key="SmallGrayLabel"
               BasedOn="{StaticResource LabelBase}">
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="-5 0 0 -5" />
    </Style>

    <!--Headerb White Lable-->
    <Style TargetType="Label" x:Key="HeaderWhiteLabel"
               BasedOn="{StaticResource LabelBase}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0 5" />
    </Style>
    <!--#endregion-->

    <!--#region TextBlock -->

    <!-- Default TextBlock style -->
    <Style TargetType="TextBlock" x:Key="WhiteTextBlock"
               BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Large TextBlock -->
    <Style TargetType="TextBlock" x:Key="LargeWhiteTextBlock"
               BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <!--Small TextBlock-->
    <Style TargetType="TextBlock" x:Key="SmallWhiteTextBlock"
               BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>
    <!--#endregion-->

    <!--#region TextBox -->

    <!--Default TextBox-->
    <Style TargetType="TextBox"
               BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <!-- Floating Hint TextBox -->
    <Style TargetType="TextBox" x:Key="floatingHintBox"
               BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!--Small TextBox-->
    <Style TargetType="TextBox"  x:Key="SmallTextBox"
               BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>
    <!--#endregion-->

    <!--#region Buttons -->

    <!-- Default Button -->
    <Style TargetType="Button"
               BasedOn="{StaticResource MaterialDesignRaisedLightButton}">
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="15" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <!-- Accent Button -->
    <Style TargetType="Button" x:Key="AccentButton"
               BasedOn="{StaticResource MaterialDesignRaisedAccentButton}">
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="15" />
        <Setter Property="Margin" Value="10" />
    </Style>
    
    <!--Default Radio Button-->
    <Style TargetType="RadioButton"
           BasedOn="{StaticResource MaterialDesignChoiceChipAccentRadioButton}">
        
    </Style>

