                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                </Style.Resources>
            </Style>
        </ListBox.ItemContainerStyle>-->

    <!--#endregion-->

    <!--#region Card -->
    <Style TargetType="materialDesign:Card">
        <Setter Property="UniformCornerRadius" Value="10" />
    </Style>
    <!--#endregion-->
</ResourceDictionary>